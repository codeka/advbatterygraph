<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory android:title="Temperature Graph">
    <CheckBoxPreference android:key="au.com.codeka.advbatterygraph.(%d).IncludeTemp"
                        android:title="Show Temperature"
                        android:summary="Include a graph of battery temperature." />
    <CheckBoxPreference
        android:key="au.com.codeka.advbatterygraph.(%d).SmoothTemp"
        android:title="Smooth Graph"
        android:summary="Smooth the graph so it's not so noisy."
        android:defaultValue="false" />
    <ListPreference android:key="au.com.codeka.advbatterygraph.(%d).TempUnits"
                    android:title="Units"
                    android:defaultValue="C"
                    android:entries="@array/temp_units_display"
                    android:entryValues="@array/temp_units_values" />
  </PreferenceCategory>
</PreferenceScreen>
