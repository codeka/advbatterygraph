<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
  <Preference
      app:fragment="au.com.codeka.advbatterygraph.SettingsActivity$GraphSettingsFragment"
      app:icon="@drawable/ic_graphsettings"
      app:title="Graph Settings"
      app:summary="Size and look of the graph widget." />

  <Preference
      app:fragment="au.com.codeka.advbatterygraph.SettingsActivity$BatterySettingsFragment"
      app:icon="@drawable/ic_battery"
      app:title="Battery Graph"
      app:summary="Settings for monitoring your phones battery." />

  <Preference
      app:fragment="au.com.codeka.advbatterygraph.SettingsActivity$BluetoothSettingsFragment"
      app:icon="@drawable/ic_bluetooth"
      app:title="Bluetooth Devices"
      app:summary="Settings for monitoring your bluetooth devices (watch, headphones, etc)." />

  <Preference
      app:fragment="au.com.codeka.advbatterygraph.SettingsActivity$TempSettingsFragment"
      app:icon="@drawable/ic_temp"
      app:title="Temperature Graph"
      app:summary="Settings for monitoring your phones temperature." />

  <Preference
      app:fragment="au.com.codeka.advbatterygraph.SettingsActivity$NotificationSettingsFragment"
      app:icon="@drawable/ic_notifications"
      app:title="Notifications"
      app:summary="Notifications for battery levels" />

  <Preference
      app:fragment="au.com.codeka.advbatterygraph.SettingsActivity$ExportFragment"
      app:icon="@drawable/ic_share"
      app:title="Export data"
      app:summary="Export data to a .csv file." />
</PreferenceScreen>
